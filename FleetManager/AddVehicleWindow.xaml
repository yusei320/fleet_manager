<Window x:Class="FleetManager.AddVehicleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un véhicule" Height="550" Width="450"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Style pour les TextBlock (labels) -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Style pour les TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#D1D8E0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#27AE60"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#52BE80"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#D1D8E0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Style pour le bouton -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E8449"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour ComboBoxItem avec icônes -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
        CornerRadius="10" 
        Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="#22000000" 
                         Direction="270" 
                         ShadowDepth="3" 
                         BlurRadius="15" 
                         Opacity="0.3"/>
        </Border.Effect>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tête -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="🚗 Nouveau Véhicule" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Ajoutez un véhicule à votre flotte" 
                           FontSize="12" 
                           Foreground="#7F8C8D"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Formulaire -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Immatriculation -->
                    <TextBlock Text="🔢 Immatriculation" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtImmatriculation" 
                            Style="{StaticResource ModernTextBox}"
                            CharacterCasing="Upper"
                            MaxLength="15"/>

                    <!-- Marque -->
                    <TextBlock Text="🏷️ Marque" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtMarque" 
                            Style="{StaticResource ModernTextBox}"/>

                    <!-- Modèle -->
                    <TextBlock Text="📋 Modèle" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtModele" 
                            Style="{StaticResource ModernTextBox}"/>

                    <!-- Année -->
                    <TextBlock Text="📅 Année" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtAnnee" 
                            Style="{StaticResource ModernTextBox}"
                            MaxLength="4"
                            PreviewTextInput="TxtAnnee_PreviewTextInput"/>

                    <!-- Carburant -->
                    <TextBlock Text="⛽ Type de carburant" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cmbCarburant" Style="{StaticResource ModernComboBox}">
                        <ComboBoxItem Content="⛽ Essence" IsSelected="True"/>
                        <ComboBoxItem Content="🛢️ Diesel"/>
                        <ComboBoxItem Content="🔋 Hybride"/>
                        <ComboBoxItem Content="⚡ Électrique"/>
                        <ComboBoxItem Content="🌿 GPL"/>
                    </ComboBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Bouton -->
            <Button Grid.Row="2" 
                    Content="✔ Ajouter le véhicule" 
                    Click="BtnAdd_Click" 
                    Style="{StaticResource ModernButton}"
                    Margin="0,10,0,0"/>
        </Grid>
    </Border>
</Window>