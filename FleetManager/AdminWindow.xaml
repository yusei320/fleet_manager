<Window x:Class="FleetManager.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administration" Height="500" Width="900" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Liste des utilisateurs -->
        <GroupBox Header="Utilisateurs" Margin="10">
            <StackPanel>
                <ListBox x:Name="UserList" Height="300" SelectionChanged="UserList_SelectionChanged"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Créer" Width="100" Margin="5" Click="BtnCreate_Click"/>
                    <Button Content="Supprimer" Width="100" Margin="5" Click="BtnDelete_Click"/>
                    <Button Content="Bloquer/Débloquer" Width="150" Margin="5" Click="BtnBlock_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Voitures de l'utilisateur sélectionné -->
        <GroupBox Header="Véhicules de l'utilisateur" Grid.Column="1" Margin="10">
            <StackPanel>
                <ListBox x:Name="VehiculeList" Height="350"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
