<Window x:Class="FleetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fleet Manager" Height="550" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <DockPanel>

            <!-- Menu -->
            <Menu DockPanel.Dock="Top">
                <MenuItem x:Name="AdminMenu" Header="Administration" Click="OpenAdmin_Click"/>
                <MenuItem Header="Accueil" Click="MenuItem_Click"/>
                <MenuItem Header="Véhicules">
                    <MenuItem Header="Ajouter un véhicule" Click="Menu_AddVehicle_Click"/>
                    <MenuItem Header="Liste des véhicules" Click="Menu_ListVehicles_Click"/>
                </MenuItem>
                <MenuItem Header="Suivi">
                    <MenuItem Header="Ajouter suivi" Click="Menu_AddSuivi_Click"/>
                    <MenuItem Header="Voir suivi" Click="Menu_ViewSuivi_Click"/>
                </MenuItem>
            </Menu>


            <!-- Contenu principal -->
            <StackPanel x:Name="MainContent" Margin="0,10,0,0">
                <TextBlock Text="Tableau de bord Fleet Manager"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- Statistiques -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock x:Name="txtKilometrageTotal" Text="Kilométrage total: 0 km" FontSize="16" Margin="10"/>
                    <TextBlock x:Name="txtCoutTotal" Text="Coût carburant total: 0 €" FontSize="16" Margin="10"/>
                </StackPanel>

                <!-- Suivis récents -->
                <TextBlock Text="Suivis récents:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <DataGrid x:Name="dgRecentSuivi" AutoGenerateColumns="True" Height="250" IsReadOnly="True"/>
            </StackPanel>

        </DockPanel>
    </Grid>
</Window>
