<Window x:Class="FleetManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion - Fleet Manager" Height="550" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F8F8F8">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="Fleet Manager" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Email :" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,15" TextChanged="txtInput_TextChanged" />

                <TextBlock Text="Mot de passe :" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0,0,0,20" PasswordChanged="txtInput_TextChanged"/>

                <Button Content="Se connecter" Height="35" Background="#0078D7" Foreground="White"
                        FontWeight="SemiBold" Click="BtnConnexion_Click"/>

                <Button Content="Inscription" Height="35" Background="#0078D7" Foreground="White"
        FontWeight="SemiBold" Click="BtnInscription_Click"/>


                <TextBlock x:Name="lblMessage" Foreground="Red" 
                           HorizontalAlignment="Center" Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
