<Window x:Class="FleetManager.AddSuiviWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Ajouter un suivi" Height="580" Width="450"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Style pour les TextBlock (labels) -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Style pour les TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#D1D8E0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#5DADE2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#D1D8E0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Style pour DatePicker -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#D1D8E0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Style pour le bouton -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#21618C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" 
        CornerRadius="10" 
        Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="#22000000" 
                         Direction="270" 
                         ShadowDepth="3" 
                         BlurRadius="15" 
                         Opacity="0.3"/>
        </Border.Effect>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tête -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="⛽ Nouveau Suivi" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Enregistrez les informations de ravitaillement" 
                           FontSize="12" 
                           Foreground="#7F8C8D"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Formulaire -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Véhicule -->
                    <TextBlock Text="🚗 Véhicule" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cmbVehicule" Style="{StaticResource ModernComboBox}"/>

                    <!-- Date -->
                    <TextBlock Text="📅 Date du suivi" Style="{StaticResource LabelStyle}"/>
                    <DatePicker x:Name="dpDateSuivi" 
                               SelectedDate="{x:Static sys:DateTime.Now}" 
                               Style="{StaticResource ModernDatePicker}"/>

                    <!-- Carburant -->
                    <TextBlock Text="⛽ Carburant (litres)" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtCarburant" 
                            Style="{StaticResource ModernTextBox}"
                            Text="0"/>

                    <!-- Coût -->
                    <TextBlock Text="💰 Coût (€)" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtCout" 
                            Style="{StaticResource ModernTextBox}"
                            Text="0"/>

                    <!-- Distance -->
                    <TextBlock Text="📊 Distance parcourue (km)" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtDistance" 
                            Style="{StaticResource ModernTextBox}"
                            Text="0"/>

                    <!-- Commentaire -->
                    <TextBlock Text="📝 Commentaire (optionnel)" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtCommentaire" 
                            Height="80" 
                            TextWrapping="Wrap" 
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            Padding="12"
                            FontSize="13"
                            BorderBrush="#D1D8E0"
                            BorderThickness="1.5"
                            Background="White"
                            Foreground="#2C3E50"
                            Margin="0,0,0,20"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Bouton -->
            <Button Grid.Row="2" 
                    Content="✔ Enregistrer le suivi" 
                    Click="BtnAddSuivi_Click" 
                    Style="{StaticResource ModernButton}"
                    Margin="0,10,0,0"/>
        </Grid>
    </Border>
</Window>
